<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.tdsa.todo.MainActivity"
    android:touchscreenBlocksFocus="false"
    android:scrollIndicators="top|bottom">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="calculate"
        android:id="@+id/calcBtn"
        android:onClick="calcBtn"
        android:layout_below="@+id/editTextDay"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/editTextYear"
        android:layout_alignEnd="@+id/editTextYear" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editTextDay"
        android:width="100dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editTextMonth"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:width="100dp"
        android:layout_alignParentEnd="false" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editTextYear"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:width="100dp" />

    <GridView
        android:layout_width="wrap_content"
        android:layout_height="150dp"
        android:id="@+id/gridViewPsy"
        android:numColumns="3"
        android:nestedScrollingEnabled="false"
        android:textAlignment="viewEnd"
        android:touchscreenBlocksFocus="true"
        android:textFilterEnabled="true"
        android:longClickable="true"
        android:layout_below="@+id/calcBtn"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/listViewPsy"
        android:contextClickable="true"
        android:smoothScrollbar="false"
        android:scrollingCache="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/gridViewPsy" />

</RelativeLayout>
